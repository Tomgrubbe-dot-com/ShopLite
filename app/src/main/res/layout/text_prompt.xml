<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/textEntryPopup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorListItemSelectedDark"
    android:padding="16dp">

    <TextView
        android:id="@+id/textCategoryPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/type_your_message"
        android:textColor="@color/colorListItemTextDark"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/editNewCategoryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords">
        <requestFocus />
    </EditText>

</LinearLayout>
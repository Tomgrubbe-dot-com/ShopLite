<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:background="?attr/colorListItem">


    <CheckBox
        android:id="@+id/itemCheck"
        style="@style/WhiteCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_weight="0"
        android:backgroundTint="?attr/colorListItem"
        android:buttonTint="?attr/colorCheckBox" />

    <TextView
        android:id="@+id/itemText"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/description"
        android:textColor="?attr/colorListItemText"
        android:textSize="14sp" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/quantityLess"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_nav_back"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:layout_marginLeft="15dp"
            android:paddingRight="10dp"
            android:backgroundTint="@color/colorTextLight" />

        <TextView
            android:id="@+id/textQuantity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_weight="0.5"
            android:text="1" />

        <Button
            android:id="@+id/quantityMore"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_nav_next"
            android:layout_weight="1"
            android:paddingRight="15dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="10dp"
            android:backgroundTint="@color/colorTextLight" />

    </LinearLayout>


